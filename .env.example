# ML Based Anomaly Detector Environment Variables

# Python path
PYTHONPATH=src

# Logging Configuration
LOG_LEVEL=INFO

# Data Download Control (optionally use the provided VSCode launch configs)
DOWNLOAD=false

# TLS verification for external HTTP calls (Splunk/Prometheus).
# Recommended for production:
REQUESTS_VERIFY=true
# If you use self-signed certs in local/dev, you can set:
# REQUESTS_VERIFY=false

# Splunk Configuration
SPLUNK_URL=your_splunk_url_goes_here
SPLUNK_AUTH_TOKEN=your_splunk_auth_token_here
SPLUNK_HEC_TOKEN=your_splunk_hec_token_here

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000/
MLFLOW_EXPERIMENT_NAME="ML Based Anomaly Detector"

# Prometheus Configuration
PROMETHEUS_URL="your_prometheus_url_goes_here"

# Data Subset (Optional - for testing with smaller datasets)
# SUBSET=100
# SAMPLING=0.15

# Training parameters
MAX_EPOCHS=100

# Threshold behavior
# By default, inference uses the persisted threshold from training.
# Setting this true will recompute the threshold on inference data (can reduce sensitivity
# if the inference window contains anomalies).
RECALCULATE_THRESHOLD_ON_INFERENCE=false